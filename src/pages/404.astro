---
import Layout from '../layouts/Layout.astro';

const pageTitle = '404 - Page Not Found';
const pageDescription = 'The page you are looking for cannot be found.';
---

<Layout title={pageTitle} description={pageDescription} noindex={true}>
  <main class="error-page">
    <div class="container">
      <div class="error-content">
        <div class="error-code">404</div>
        <h1 class="error-title">Page Not Found</h1>
        <p class="error-description">
          Oops! The page you're looking for doesn't exist or may have been moved.
        </p>
        
        <div class="error-actions">
          <a href="/" class="home-button">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
              <polyline points="9 22 9 12 15 12 15 22"/>
            </svg>
            Back to Home
          </a>
          <a href="/blog" class="blog-button">Browse Blog</a>
        </div>

        <div class="suggestions">
          <p class="suggestions-title">Looking for something specific?</p>
          <ul class="suggestions-list">
            <li><a href="/">Browse All Courses</a></li>
            <li><a href="/blog">Read Our Blog</a></li>
            <li><a href="/rate-my-course">Rate a Course</a></li>
          </ul>
        </div>
      </div>
    </div>
  </main>
</Layout>

<style>
  .error-page {
    min-height: 80vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: calc(var(--spacing) * 8) 0;
  }

  .container {
    max-width: 700px;
    margin: 0 auto;
    padding: 0 calc(var(--spacing) * 3);
  }

  .error-content {
    text-align: center;
  }

  .error-code {
    font-size: 8rem;
    font-weight: 900;
    background: linear-gradient(135deg, #1e40af 0%, #0ea5e9 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    line-height: 1;
    margin-bottom: calc(var(--spacing) * 3);
  }

  .error-title {
    font-size: 2.5rem;
    color: var(--neutral-900);
    margin-bottom: calc(var(--spacing) * 2);
  }

  .error-description {
    font-size: 1.25rem;
    color: var(--neutral-600);
    margin-bottom: calc(var(--spacing) * 5);
    line-height: 1.6;
  }

  .error-actions {
    display: flex;
    gap: calc(var(--spacing) * 2);
    justify-content: center;
    margin-bottom: calc(var(--spacing) * 8);
    flex-wrap: wrap;
  }

  .home-button,
  .blog-button {
    display: inline-flex;
    align-items: center;
    gap: calc(var(--spacing) * 1.5);
    padding: calc(var(--spacing) * 2.5) calc(var(--spacing) * 4);
    font-weight: 700;
    border-radius: calc(var(--border-radius) / 2);
    text-decoration: none;
    transition: var(--transition);
  }

  .home-button {
    background: var(--color-primary);
    color: white;
  }

  .home-button:hover {
    background: var(--color-primary-dark);
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
  }

  .blog-button {
    background: white;
    color: var(--color-primary);
    border: 2px solid var(--color-primary);
  }

  .blog-button:hover {
    background: var(--neutral-50);
  }

  .suggestions {
    padding: calc(var(--spacing) * 4);
    background: var(--neutral-50);
    border-radius: calc(var(--border-radius));
    border: 1px solid var(--neutral-200);
  }

  .suggestions-title {
    font-weight: 600;
    color: var(--neutral-900);
    margin-bottom: calc(var(--spacing) * 2);
  }

  .suggestions-list {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: calc(var(--spacing) * 1.5);
  }

  .suggestions-list a {
    color: var(--color-primary);
    text-decoration: none;
    font-weight: 500;
    transition: var(--transition);
  }

  .suggestions-list a:hover {
    color: var(--color-primary-dark);
    padding-left: calc(var(--spacing) * 1);
  }

  @media (max-width: 768px) {
    .error-code {
      font-size: 5rem;
    }

    .error-title {
      font-size: 2rem;
    }

    .error-actions {
      flex-direction: column;
      align-items: stretch;
    }

    .home-button,
    .blog-button {
      justify-content: center;
    }
  }
</style>
