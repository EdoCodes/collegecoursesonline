---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// Get all blog posts
const allPosts = await getCollection('blog');

// Filter out drafts and sort by date
const publishedPosts = allPosts
  .filter(post => !post.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const featuredPosts = publishedPosts.filter(post => post.data.featured).slice(0, 3);
const recentPosts = publishedPosts.slice(0, 12);

const pageTitle = 'Blog - Online Learning Guides & Tips';
const pageDescription = 'Expert guides, tips, and insights about online education. Learn how to choose the right online courses, succeed in virtual learning, and advance your career.';
---

<Layout title={pageTitle} description={pageDescription}>
  <main class="blog-page">
    <!-- Hero Section -->
    <div class="hero-section">
      <div class="container">
        <h1 class="page-title">Blog</h1>
        <p class="page-subtitle">
          Your guide to online learning success. Expert tips, course reviews, and career advice.
        </p>
      </div>
    </div>

    <div class="container">
      <!-- Featured Posts -->
      {featuredPosts.length > 0 && (
        <section class="featured-section">
          <h2 class="section-title">Featured Articles</h2>
          <div class="featured-grid">
            {featuredPosts.map((post) => (
              <a href={`/blog/${post.slug}`} class="featured-card">
                {post.data.image && (
                  <div class="featured-image">
                    <img src={post.data.image} alt={post.data.title} />
                  </div>
                )}
                <div class="featured-content">
                  <span class="featured-badge">Featured</span>
                  <h3>{post.data.title}</h3>
                  <p>{post.data.description}</p>
                  <div class="post-meta">
                    <span class="post-date">
                      {post.data.pubDate.toLocaleDateString('en-US', {
                        year: 'numeric',
                        month: 'long',
                        day: 'numeric'
                      })}
                    </span>
                    <span class="post-author">By {post.data.author}</span>
                  </div>
                </div>
              </a>
            ))}
          </div>
        </section>
      )}

      <!-- All Posts -->
      <section class="posts-section">
        <h2 class="section-title">Latest Articles</h2>
        
        {recentPosts.length > 0 ? (
          <div class="posts-grid">
            {recentPosts.map((post) => (
              <article class="post-card">
                {post.data.image && (
                  <a href={`/blog/${post.slug}`} class="post-image-link">
                    <img src={post.data.image} alt={post.data.title} class="post-image" />
                  </a>
                )}
                <div class="post-content">
                  {post.data.tags.length > 0 && (
                    <div class="post-tags">
                      {post.data.tags.slice(0, 3).map((tag) => (
                        <span class="tag">{tag}</span>
                      ))}
                    </div>
                  )}
                  
                  <h3 class="post-title">
                    <a href={`/blog/${post.slug}`}>{post.data.title}</a>
                  </h3>
                  
                  <p class="post-description">{post.data.description}</p>
                  
                  <div class="post-footer">
                    <div class="post-meta">
                      <span class="post-date">
                        {post.data.pubDate.toLocaleDateString('en-US', {
                          year: 'numeric',
                          month: 'short',
                          day: 'numeric'
                        })}
                      </span>
                      <span class="meta-divider">â€¢</span>
                      <span class="post-author">{post.data.author}</span>
                    </div>
                    
                    <a href={`/blog/${post.slug}`} class="read-more">
                      Read More
                      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M5 12h14M12 5l7 7-7 7"/>
                      </svg>
                    </a>
                  </div>
                </div>
              </article>
            ))}
          </div>
        ) : (
          <div class="no-posts">
            <svg width="80" height="80" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
              <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
              <polyline points="14 2 14 8 20 8"/>
              <line x1="16" y1="13" x2="8" y2="13"/>
              <line x1="16" y1="17" x2="8" y2="17"/>
              <polyline points="10 9 9 9 8 9"/>
            </svg>
            <h3>No blog posts yet</h3>
            <p>Check back soon for helpful articles about online learning!</p>
          </div>
        )}
      </section>

      <!-- Newsletter Signup (Optional) -->
      <section class="newsletter-section">
        <div class="newsletter-card">
          <h2>Stay Updated</h2>
          <p>Get the latest articles, course recommendations, and tips delivered to your inbox.</p>
          <form class="newsletter-form">
            <input 
              type="email" 
              placeholder="Enter your email" 
              required 
              class="newsletter-input"
            />
            <button type="submit" class="newsletter-button">Subscribe</button>
          </form>
          <p class="newsletter-note">We respect your privacy. Unsubscribe at any time.</p>
        </div>
      </section>
    </div>
  </main>
</Layout>

<style>
  .blog-page {
    min-height: 100vh;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 calc(var(--spacing) * 3);
  }

  /* Hero Section */
  .hero-section {
    background: linear-gradient(135deg, #1e40af 0%, #0ea5e9 100%);
    padding: calc(var(--spacing) * 8) 0;
    margin-bottom: calc(var(--spacing) * 8);
    text-align: center;
  }

  .page-title {
    font-size: 3.5rem;
    color: white;
    margin-bottom: calc(var(--spacing) * 2);
  }

  .page-subtitle {
    font-size: 1.25rem;
    color: rgba(255, 255, 255, 0.95);
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  /* Section Titles */
  .section-title {
    font-size: 2rem;
    margin-bottom: calc(var(--spacing) * 4);
    color: var(--neutral-900);
  }

  /* Featured Section */
  .featured-section {
    margin-bottom: calc(var(--spacing) * 10);
  }

  .featured-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: calc(var(--spacing) * 4);
  }

  .featured-card {
    background: white;
    border-radius: calc(var(--border-radius) * 1.5);
    overflow: hidden;
    box-shadow: var(--shadow-lg);
    transition: var(--transition);
    text-decoration: none;
    border: 1px solid var(--neutral-200);
  }

  .featured-card:hover {
    transform: translateY(-8px);
    box-shadow: var(--shadow-2xl);
  }

  .featured-image {
    height: 250px;
    overflow: hidden;
    background: var(--neutral-200);
  }

  .featured-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: var(--transition);
  }

  .featured-card:hover .featured-image img {
    transform: scale(1.05);
  }

  .featured-content {
    padding: calc(var(--spacing) * 4);
  }

  .featured-badge {
    display: inline-block;
    padding: calc(var(--spacing) * 0.75) calc(var(--spacing) * 2);
    background: var(--color-warning);
    color: white;
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border-radius: calc(var(--border-radius) / 4);
    margin-bottom: calc(var(--spacing) * 2);
  }

  .featured-content h3 {
    font-size: 1.5rem;
    margin-bottom: calc(var(--spacing) * 2);
    color: var(--neutral-900);
  }

  .featured-content p {
    font-size: 1rem;
    line-height: 1.7;
    color: var(--neutral-700);
    margin-bottom: calc(var(--spacing) * 3);
  }

  /* Posts Section */
  .posts-section {
    margin-bottom: calc(var(--spacing) * 10);
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: calc(var(--spacing) * 4);
  }

  .post-card {
    background: white;
    border-radius: calc(var(--border-radius) * 1.25);
    overflow: hidden;
    box-shadow: var(--shadow-md);
    transition: var(--transition);
    border: 1px solid var(--neutral-200);
  }

  .post-card:hover {
    box-shadow: var(--shadow-lg);
    transform: translateY(-4px);
  }

  .post-image-link {
    display: block;
    height: 200px;
    overflow: hidden;
    background: var(--neutral-200);
  }

  .post-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: var(--transition);
  }

  .post-card:hover .post-image {
    transform: scale(1.05);
  }

  .post-content {
    padding: calc(var(--spacing) * 3);
  }

  .post-tags {
    display: flex;
    gap: calc(var(--spacing) * 1);
    margin-bottom: calc(var(--spacing) * 2);
    flex-wrap: wrap;
  }

  .tag {
    padding: calc(var(--spacing) * 0.5) calc(var(--spacing) * 1.5);
    background: var(--neutral-100);
    color: var(--neutral-700);
    font-size: 0.75rem;
    font-weight: 600;
    border-radius: calc(var(--border-radius) / 4);
  }

  .post-title {
    font-size: 1.25rem;
    margin-bottom: calc(var(--spacing) * 2);
  }

  .post-title a {
    color: var(--neutral-900);
    text-decoration: none;
    transition: var(--transition);
  }

  .post-title a:hover {
    color: var(--color-primary);
  }

  .post-description {
    font-size: 0.9375rem;
    line-height: 1.7;
    color: var(--neutral-600);
    margin-bottom: calc(var(--spacing) * 3);
  }

  .post-footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-top: calc(var(--spacing) * 2);
    border-top: 1px solid var(--neutral-200);
  }

  .post-meta {
    display: flex;
    align-items: center;
    gap: calc(var(--spacing) * 1);
    font-size: 0.875rem;
    color: var(--neutral-600);
  }

  .meta-divider {
    color: var(--neutral-400);
  }

  .read-more {
    display: inline-flex;
    align-items: center;
    gap: calc(var(--spacing) * 1);
    color: var(--color-primary);
    font-weight: 600;
    font-size: 0.9375rem;
    text-decoration: none;
    transition: var(--transition);
  }

  .read-more:hover {
    color: var(--color-primary-dark);
  }

  .read-more svg {
    transition: var(--transition);
  }

  .read-more:hover svg {
    transform: translateX(4px);
  }

  /* No Posts */
  .no-posts {
    text-align: center;
    padding: calc(var(--spacing) * 10) 0;
  }

  .no-posts svg {
    margin: 0 auto calc(var(--spacing) * 3);
    color: var(--neutral-300);
  }

  .no-posts h3 {
    font-size: 1.5rem;
    color: var(--neutral-700);
    margin-bottom: calc(var(--spacing) * 1);
  }

  .no-posts p {
    font-size: 1rem;
    color: var(--neutral-500);
  }

  /* Newsletter Section */
  .newsletter-section {
    margin-bottom: calc(var(--spacing) * 10);
  }

  .newsletter-card {
    background: linear-gradient(135deg, #1e40af 0%, #0ea5e9 100%);
    padding: calc(var(--spacing) * 8);
    border-radius: calc(var(--border-radius) * 1.5);
    text-align: center;
    color: white;
  }

  .newsletter-card h2 {
    font-size: 2.5rem;
    margin-bottom: calc(var(--spacing) * 2);
    color: white;
  }

  .newsletter-card > p {
    font-size: 1.125rem;
    margin-bottom: calc(var(--spacing) * 4);
    opacity: 0.95;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .newsletter-form {
    display: flex;
    gap: calc(var(--spacing) * 2);
    max-width: 500px;
    margin: 0 auto calc(var(--spacing) * 2);
  }

  .newsletter-input {
    flex: 1;
    padding: calc(var(--spacing) * 2.5);
    border: none;
    border-radius: calc(var(--border-radius) / 2);
    font-size: 1rem;
  }

  .newsletter-button {
    padding: calc(var(--spacing) * 2.5) calc(var(--spacing) * 4);
    background: white;
    color: var(--color-primary);
    font-weight: 700;
    border: none;
    border-radius: calc(var(--border-radius) / 2);
    cursor: pointer;
    transition: var(--transition);
  }

  .newsletter-button:hover {
    background: var(--neutral-100);
    transform: translateY(-2px);
  }

  .newsletter-note {
    font-size: 0.875rem;
    opacity: 0.8;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .page-title {
      font-size: 2.5rem;
    }

    .featured-grid,
    .posts-grid {
      grid-template-columns: 1fr;
    }

    .newsletter-form {
      flex-direction: column;
    }

    .newsletter-card h2 {
      font-size: 2rem;
    }
  }
</style>

<script>
  // Newsletter form handling (customize with your email service)
  const form = document.querySelector('.newsletter-form');
  
  form?.addEventListener('submit', (e) => {
    e.preventDefault();
    const email = (form.querySelector('input[type="email"]') as HTMLInputElement)?.value;
    
    // TODO: Integrate with your email service (ConvertKit, Mailchimp, etc.)
    console.log('Newsletter signup:', email);
    alert('Thanks for subscribing! (Email service integration pending)');
    
    form.reset();
  });
</script>
