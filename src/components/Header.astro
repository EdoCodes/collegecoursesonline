---
// Navigation header component
---

<header class="site-header">
  <div class="container">
    <nav class="nav-bar">
      <!-- Logo -->
      <a href="/" class="logo">
        <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"/>
          <path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"/>
        </svg>
        <span class="logo-text">College Courses</span>
      </a>

      <!-- Desktop Navigation -->
      <ul class="nav-links">
        <li><a href="/" class="nav-link">Browse Courses</a></li>
        <li><a href="/blog" class="nav-link">Blog</a></li>
        <li><a href="/rate-my-course" class="nav-link">Rate My Course</a></li>
        <li><a href="/#about" class="nav-link">About</a></li>
      </ul>

      <!-- CTA Button -->
      <a href="/rate-my-course" class="cta-nav-button">
        Write a Review
      </a>

      <!-- Mobile Menu Button -->
      <button class="mobile-menu-btn" id="mobileMenuBtn" aria-label="Toggle menu">
        <svg class="menu-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="3" y1="12" x2="21" y2="12"/>
          <line x1="3" y1="6" x2="21" y2="6"/>
          <line x1="3" y1="18" x2="21" y2="18"/>
        </svg>
        <svg class="close-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="display: none;">
          <line x1="18" y1="6" x2="6" y2="18"/>
          <line x1="6" y1="6" x2="18" y2="18"/>
        </svg>
      </button>
    </nav>

    <!-- Mobile Menu -->
    <div class="mobile-menu" id="mobileMenu">
      <ul class="mobile-nav-links">
        <li><a href="/" class="mobile-nav-link">Browse Courses</a></li>
        <li><a href="/blog" class="mobile-nav-link">Blog</a></li>
        <li><a href="/rate-my-course" class="mobile-nav-link">Rate My Course</a></li>
        <li><a href="/#about" class="mobile-nav-link">About</a></li>
      </ul>
      <a href="/rate-my-course" class="mobile-cta-button">
        Write a Review
      </a>
    </div>
  </div>
</header>

<style>
  .site-header {
    background: white;
    border-bottom: 1px solid var(--neutral-200);
    position: sticky;
    top: 0;
    z-index: 100;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  }

  .container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 calc(var(--spacing) * 3);
  }

  .nav-bar {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: calc(var(--spacing) * 2.5) 0;
  }

  /* Logo */
  .logo {
    display: flex;
    align-items: center;
    gap: calc(var(--spacing) * 1.5);
    text-decoration: none;
    color: var(--neutral-900);
    font-weight: 800;
    font-size: 1.25rem;
    transition: var(--transition);
  }

  .logo svg {
    color: var(--color-primary);
  }

  .logo:hover {
    color: var(--color-primary);
  }

  .logo-text {
    font-family: var(--font-display);
  }

  /* Desktop Navigation */
  .nav-links {
    display: flex;
    align-items: center;
    gap: calc(var(--spacing) * 4);
    list-style: none;
    margin: 0;
  }

  .nav-link {
    color: var(--neutral-700);
    text-decoration: none;
    font-weight: 500;
    font-size: 1rem;
    transition: var(--transition);
    padding: calc(var(--spacing) * 1) 0;
    border-bottom: 2px solid transparent;
  }

  .nav-link:hover {
    color: var(--color-primary);
    border-bottom-color: var(--color-primary);
  }

  /* CTA Button */
  .cta-nav-button {
    display: inline-flex;
    align-items: center;
    padding: calc(var(--spacing) * 1.75) calc(var(--spacing) * 3);
    background: var(--color-primary);
    color: white;
    font-weight: 600;
    border-radius: calc(var(--border-radius) / 2);
    text-decoration: none;
    transition: var(--transition);
  }

  .cta-nav-button:hover {
    background: var(--color-primary-dark);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(30, 64, 175, 0.3);
  }

  /* Mobile Menu Button */
  .mobile-menu-btn {
    display: none;
    background: none;
    border: none;
    color: var(--neutral-700);
    cursor: pointer;
    padding: calc(var(--spacing) * 1);
  }

  /* Mobile Menu */
  .mobile-menu {
    display: none;
    padding: calc(var(--spacing) * 3) 0;
    border-top: 1px solid var(--neutral-200);
  }

  .mobile-menu.active {
    display: block;
  }

  .mobile-nav-links {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: calc(var(--spacing) * 1);
    margin-bottom: calc(var(--spacing) * 3);
  }

  .mobile-nav-link {
    display: block;
    padding: calc(var(--spacing) * 2);
    color: var(--neutral-700);
    text-decoration: none;
    font-weight: 500;
    border-radius: calc(var(--border-radius) / 2);
    transition: var(--transition);
  }

  .mobile-nav-link:hover {
    background: var(--neutral-100);
    color: var(--color-primary);
  }

  .mobile-cta-button {
    display: block;
    text-align: center;
    padding: calc(var(--spacing) * 2.5);
    background: var(--color-primary);
    color: white;
    font-weight: 600;
    border-radius: calc(var(--border-radius) / 2);
    text-decoration: none;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .nav-links,
    .cta-nav-button {
      display: none;
    }

    .mobile-menu-btn {
      display: block;
    }
  }
</style>

<script>
  const mobileMenuBtn = document.getElementById('mobileMenuBtn');
  const mobileMenu = document.getElementById('mobileMenu');
  const menuIcon = mobileMenuBtn?.querySelector('.menu-icon') as SVGElement;
  const closeIcon = mobileMenuBtn?.querySelector('.close-icon') as SVGElement;

  mobileMenuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('active');
    
    if (mobileMenu?.classList.contains('active')) {
      menuIcon.style.display = 'none';
      closeIcon.style.display = 'block';
    } else {
      menuIcon.style.display = 'block';
      closeIcon.style.display = 'none';
    }
  });
</script>
